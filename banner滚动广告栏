    <style>
        *{
            margin:0;
            padding:0;
        }
        #shang{
            width: 100%;
            height: 500px;
            background:red;
            text-align: center;
        }

        /*这里是外层的包裹,主要作用限制img的显示范围*/
        #shang #imgdiv{
            width: 1920px;
            height:500px;
            position:absolute;
            left:50%;
            overflow: hidden;
            margin-left:-960px;
        }
        /*这里是内层包裹.主要作用承载img图片,使得img排成一列,并根据点击做出特效*/
        #shang #imgdiv #aa{
            width: 9600px;
            /*background: blue;*/
        }
        #aa>p{
            width: 1920px;
            height: 500px;
            float: left;
        }
        #xia{
            width:300px;
            height: 40px;
            margin:0 auto;
            position: absolute;
            top: 440px;
            left:50%;
            margin-left: -150px;
            z-index:1;
        }
        #xia li{
            width: 52px;
            height: 40px;
            margin:0;
            padding:0;
            float: left;
            list-style:none;
        }
        #xia li>p{
            width:13px;
            height:13px;
            border: 1px solid black;
            border-radius:20px;
            background: blue;
            position: relative;
            top: 10px;
            transition:border 0.5s,height 0.5s,width 0.5s;
        }
        #xia li p:hover{
            border:2px solid yellow;
            width:15px;
            height: 15px;
        }
    </style>
