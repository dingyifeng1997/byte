<script>
    /**
     * 思路 :
     *  鼠标一移动到 li元素上边 (1):改变其背景色
     *                          (2):改变其li元素下方的div元素显示为block
     *  鼠标一移开 li元素      (1):背景色改变为原来的颜色
     *                          (2):下方的div元素显示设置为none
     */

     $(".menu li").hover(
     function(){
                $(this).css({"background":"red"});
                $(this).find(".right").css({"display":"block"});
            },
     function(){
                $(this).css({"background":"#fff"});
                $(this).find(".right").css({"display":"none"});
            }
     );

</script>
